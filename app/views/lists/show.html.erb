<div class="container">
<h1 class="text-center my-4"><%= @list.name %></h1>

<%= link_to "Add a bookmart", new_list_bookmark_path(@list), class: 'btn btn-ghost' %>
<br>
<br>
<p>
 <% @list.bookmarks.each do |bookmark| %>
  <p><strong><%= bookmark.movie.title %></strong></p>
  <p><%= bookmark.comment %>
   <%= link_to "Delete",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %></p>
 <% end %>
</p>

<%= link_to "Back to lists", lists_path %>
</div>
